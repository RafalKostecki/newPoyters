@import '../../../assets/styles/index.styl'


.loginPanel {
  position: absolute
  display flex
  flex-direction: row
  flex-wrap: nowrap
  top: 10px
  right: 20px
  z-index: 90
  padding: 2px 4px

  background-color: shadow2

  & ul {
    margin: 0
    padding: 1px
    list-style-type: none

    & li {
      display: inline-block
      margin: 0 7px

      text-transform: uppercase
      font-size: 12px
      color: colorOfDecorations
      font-weight: 600
      cursor: pointer
      transition: 200ms ease-in-out

      &:hover {
        color: fontColor3  
      }
    }  
  }
}