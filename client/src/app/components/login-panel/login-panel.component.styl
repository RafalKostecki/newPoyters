@import '../../../assets/styles/index.styl'


.loginPanel {
  position: absolute
  display flex
  flex-direction: row
  flex-wrap: nowrap
  top: 0
  right: 0
  z-index: 90
  padding: 0 4px 2px 0

  background-color: backgroundColor2
  border-bottom: 1px solid colorOfDecorations

  &:before, &:after {
    position: absolute
    content: ''
    width: 0
    height: 0

    border-style: solid
    border-width: 0 33px 23px 0
  }

  &:before {
    top: -1px
    left: -32px
    z-index: 2

    border-color: transparent backgroundColor2 transparent transparent
  }

  &:after {
    top: 0
    left: -33px
    z-index: 1

    border-color: transparent colorOfDecorations transparent transparent
  }

  & ul {
    margin: 0
    padding: 0
    list-style-type: none
    z-index: 3

    & li {
      display: inline-block
      margin: 0 7px

      text-transform: uppercase
      font-size: 12px
      color: colorOfDecorations
      font-weight: 600
      cursor: pointer
      transition: 200ms ease-in-out

      &:first-child {
        margin-left: -2px
      }

      &:hover {
        color: fontColor3
      }
    }
  }
}
