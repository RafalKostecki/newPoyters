@import '../../assets/styles/index.styl'


.loginPanel {
  position: absolute
  display flex
  flex-direction: row
  flex-wrap: nowrap
  top: 10px
  right: 10px
  z-index: 90
  padding: 4px 6px

  background-color: shadow4

  & ul {
    margin: 0
    padding: 0
    list-style-type: none

    & li {
      display: inline-block
      margin: 0 7px

      text-transform: uppercase
      font-size: 12px
      color: colorOfDecorations
      font-weight: 600
      cursor: pointer
      transition: 200ms ease-in-out

      &:first-child {
        margin-left: 0
      }

      &:last-child {
        margin-right: 0
      }

      &:hover {
        color: fontColor3
      }
    }
  }
}
