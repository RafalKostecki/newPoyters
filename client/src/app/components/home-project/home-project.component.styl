@import '../../../assets/styles/index.styl'

.homeProject {
  display: flex
  flex-direction: row
  justify-content: space-between
  margin-bottom: 30px
  padding: 30px 40px

  border-radius: 5px
  background-color: shadow4

  &__desc {
    flex: 1
    max-width: calc(50% - 20px)

    & h2 {
      text-align: center
      margin-bottom: 20px  
    }
  }

  &__img {
    flex: 1
    max-width: calc(50% - 20px)

    & > img {
      width: 100%
      max-width: 100%  
    }
  }
}