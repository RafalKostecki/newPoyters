@import '../../../assets/styles/index.styl'

.menu {
  position: relative
  display: flex
  flex-direction: row;
  height: 40px
  margin: 0 15% 20px 15%
  box-sizing: border-box

  txt(18px, 2px, 400, uppercase, inherit)

  @media (max-width: 1300px) and (min-width: 610px) {
    margin: 0 7% 20px
  }

  @media (max-width: 785px) {
    flex-direction: column
  }

  @media (max-width: 610px) {
    margin: 0 2% 20px
  }

  &__btn {
    display: none
    width: 100%

    cursor: pointer
    text-align: center
    txt(16px, 1px, 400, uppercase, inherit)

    @media (max-width: 785px) {
      display: flex
    }

    & span {
      width 60px
      display block
      float left
      margin-left calc(50% - 32.5px)
    }
  }

  &__routes {
    display: flex
    flex: 1
    flex-direction: row
    margin: 0
    padding: 0
    transition: 700ms ease-in-out

    @media (max-width: 785px) {
      flex-direction: column
    }

    & li {
      display inline
      float left
      margin 10px 30px 10px 30px
      transition: 200ms ease-in-out

      &:hover {
        color: colorOfDecorations
      }
    }
  }

  &__media {
    display: flex
    flex-direction: row
    align-items: center
    margin: 0
    padding: 0

    list-style-type: none
    transition: 700ms ease-in-out

    @media (max-width: 785px) {
      position: absolute
      flex-direction: column
      right: 0
      top: 20px
    }

    & li {
      width: 32px
      height: 32px
      margin: 0 10px

      border-radius: 50%
      outline: none

      &:hover {
        background-color: colorOfDecorations
      }

      @media (max-width: 785px) {
        margin: 5px 10px
      }
    }
  }
}

.menuArrow {
  margin: 6px 0 0 3px
  width: 0
  height: 0

  border-style: solid
  border-width: 7px 7px 0 7px
  border-color: colorOfDecorations transparent transparent transparent
}
