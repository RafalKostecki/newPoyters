@import '../../../assets/styles/index.styl'

.techStack {
  display: flex
  flex-direction: column
  padding: 40px
  margin: 50px 0 20px 0
  box-sizing: border-box

  background-color: shadow4

  @media (max-width: 1300px) {
    margin: 40px 0 20px 0
  }

  &__headers {
    margin-bottom: 15px

    text-align: center
  
    & h5 { 
      text-transform: lowercase
      letter-spacing: 2px
      color: colorOfDecorations
    }
  }

  &__description {
    margin-bottom: 10px  
  }

  &__stack {
    & h4 {
      margin-top: 20px

      txt(22px, 3px, 200, uppercase, inherit)
    }  
  }
}