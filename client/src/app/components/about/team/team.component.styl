@import '../../../assets/styles/index.styl'

.team {
  display: flex
  flex-direction: column
  padding: 40px
  margin-bottom: 30px
  box-sizing: border-box

  background-color: shadow4

  &__headers {
    margin-bottom: 15px

    text-align: center
  
    & h5 { 
      text-transform: lowercase
      letter-spacing: 2px
      color: colorOfDecorations
    }
  }

  &__description {
    margin-bottom: 10px  

    & a {
      color: colorOfDecorations  
      font-weight: 700
      transition: 200ms ease-in-out

      &:hover {
        color: fontColor4
      }
    }
  }
}