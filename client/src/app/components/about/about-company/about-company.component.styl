@import '../../../assets/styles/index.styl'

.aboutCompany {
  display: flex
  flex-direction: column
  padding: 40px
  box-sizing: border-box

  background-color: shadow4

  &__headers {
    text-align: center
  
    & h2 { 
      txt(30px, 2px, 400, uppercase, colorOfDecorations)
    }
  }

  &__desc {
    & p {
      
    }
  
    & h4 {
      txt(22px, 3px, 200, uppercase, inherit)
    }
  }
}

.sectionParagraph {
  display: flex
  flex-direction: row
  flex-wrap: nowrap
  justify-content: space-between
  margin-top: 40px;

  @media (max-width: 610px) {
    margin-top: 5px
    flex-direction: column
  }

  &--reverse {
    @media (max-width: 610px) {
      flex-direction: column-reverse
    }
  }

  &__image {
    display: flex
    justify-content: center
    align-items: center
    margin: 0 30px

    & img {
      max-width: 256px

      @media (max-width: 610px) {
        max-width: 96px
      }
    }

    &--rotate20 {
      margin: 0
      transform: rotate(20deg) translate(-20px, -10px)

      @media (max-width: 610px) {
        transform: rotate(7deg) translate(0, 5px)
      }
    }

    &--rotate3 {
      margin: 0
      transform: rotate(-4deg) translateY(-10px)
    }
  }

  &__desc {
  }
}