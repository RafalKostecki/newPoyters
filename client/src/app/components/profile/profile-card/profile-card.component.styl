@import '../../../assets/styles/index.styl'


.profileCard {
  display: flex
  flex-direction: column
  padding: 30px 20px

  background-color: shadow4

  &__info {
    text-transform: lowercase

    & span {
      txt(12px, 2px, bold, none, inherit)  
    }
  }
}

.userMainData {
  display: flex
  flex-direction: column
  flex-wrap: nowrap

  &__username {
    margin-bottom: 5px
    
    txt(12px, 0, 700, uppercase, colorOfDecorations)
  }

  &__name {
    letter-spacing: 2px

    @media (max-width: 650px) {
      text-align: center
    }
  }

  &__mail {
    color: fontColor3

    @media (max-width: 650px) {
      text-align: center
    }
  }
}

.notVerifiedMail {
  text-align: center
  color: warningColor
}