@import '../../../assets/styles/index.styl'


.profilePanel {
  position: absolute
  display: flex
  flex-direction: column
  flex-wrap: nowrap
  top: 10px 
  right 20px

  &__icon {
    display: block
    width: 32px
    height: 32px

    border-radius: 50%
    border: 1px solid colorOfDecorations  
  }

  &__list {
    position: absolute
    top: 40px
    right: 0
    padding: 3px 9px

    background-color: shadow2

    & ul {
      margin: 0
      padding: 0  

      & li {
        list-style-type: none  
        transition: 200ms ease-in-out
        cursor: pointer

        &:hover {
          color: colorOfDecorations 
        } 
      }
    }

    &--separator {
      margin-top: 5px
      padding-top: 2px

      border-top: 1px solid backgroundColor1 
    }

    border: 1px solid colorOfDecorations  
  }
}
