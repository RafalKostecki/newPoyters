@import '../../../assets/styles/index.styl'

.insertForm {
  display grid
  justify-items center
  margin-bottom 50px

  &__box {
    display grid
    padding 20px 15px
    min-width 500px
    max-width 700px

    &--signInUp {
      color fontColor
    }

  }

}


.insertFormSubmit {
  margin 45px 0 10px 0
  padding 7px 10px

  color fontColor
  background transparent
  border 4px solid backgroundColor1
  letter-spacing 2px

  &:focus {
    outline none
    border 2px solid colorOfDecorations
  }

  &:hover {
    padding 9px 12px

    cursor pointer
    border 2px solid colorOfDecorations
  }
}

.insertFormInput {
  position relative
  display grid

  &__validation {
    position absolute
    height auto
    width 100px
    top 10px
    left -135px
    padding 6px 9px

    background-color rgba(0, 0, 0, 0.7)
    box-shadow 0 0px 20px rgba(0, 0, 0, 0.9)
    color warningColor
  }

  &__label {
    margin 15px 0 2px 0

    color colorOfDecorations
  }

  &__inputField {
    height 30px
    padding 3px 9px

    background backgroundColor1
    border 2px solid transparent
    transition 200ms ease-in-out
    color fontColor
    letter-spacing 2px
    font-size 16px

    &:active {
      border 2px solid transparent
    }

    &:focus {
      outline none
      border 2px solid colorOfDecorations
    }
  }
}
