@import '../../../assets/styles/index.styl'

.projectsWrapper {
    display: flex
    flex-flow: row wrap
    justify-content: space-between
    margin-bottom: 30px;

    & > * {
        flex-basis: 50%
        max-width: calc(50% - 20px)
        box-sizing: border-box
        margin-bottom: 20px

        @media (max-width: 750px) {
            flex-basis: 100%
            max-width: none
        }
    }
}
