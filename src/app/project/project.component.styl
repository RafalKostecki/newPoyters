@import '../../styles.styl'

.project
    width 80%
    margin 50px 10% 50px 10%
    float left
    &__img
        width 200px
        height 270px
        float left
        background red
    &__description
        width calc(100% - 320px)
        padding 0px 50px 40px 50px
        margin-left 20px
        float left
    &__txtBox
        width 100%
        float left
        text-align center
    &--imgBox
        background-position center
        background-size cover
        transition 0.5s
        &:hover
            cursor pointer
    &--descBox
        border-bottom 2px solid blueColor1
    &--projType
        txt(12px, 1px, 700, uppercase, blueColor1)
    &--titleTxt
        txt(32px, 2px, 700, none, inherit)
        padding-bottom 10px
    &--descTxt
        txt(18px, 0px, 400, none, inherit)
        line-height 24px
        text-indent 50px
@media (max-width: 1000px) and (min-width: 700px)
    .project
        width 90%
        margin 50px 5% 50px 5%
        float left
@media (max-width: 700px) and (min-width: 600px)
    .project
        width 95%
        margin 50px 2.5% 50px 2.5%
        float left
        &__img
            width 150px
            height 200px
        &__description
            width calc(100% - 250px)
            padding 0px 50px 40px 50px
            margin 0
        &--descTxt
            txt(16px, 0px, 400, none, inherit)
@media (max-width: 600px)
    .project
        width 92%
        margin 50px 4% 50px 4%
        float left
        &__img
            width 100%
            height 55vh
        &__description
            width calc(100% - 50px)
            padding 50px 25px 40px 25px
            margin 0
        &--descTxt
            txt(14px, 0px, 400, none, inherit)
